{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope soya-next* --ignore soya-next-server build",
    "build:examples": "lerna run --ignore soya-next* build",
    "clean": "rimraf examples/*/{.next,out} packages/*/lib",
    "clean:all": "yarn clean && lerna clean",
    "coverage": "yarn test --coverage",
    "coveralls": "yarn coverage && cat ./coverage/lcov.info | coveralls",
    "export:examples": "lerna run --ignore soya-next* --ignore apollo --ignore base-path --ignore i18n* export",
    "lint": "marlint",
    "prepublish": "yarn clean && yarn build",
    "publish": "lerna publish",
    "test": "NODE_ENV=test jest",
    "watch": "yarn build -w"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "apollo-client": "^2.3.8",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "config": "^2.0.1",
    "coveralls": "^3.0.2",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "express": "^4.16.3",
    "graphql": "^14.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.4.3",
    "lint-staged": "^10.5.4",
    "marlint": "^6.5.4",
    "next": "^9.5.3",
    "prettier": "^2.2.1",
    "react": "^16.12.0",
    "react-apollo": "^2.2.1",
    "react-cookie": "^2.2.0",
    "react-dom": "^16.12.0",
    "react-redux": "^5.0.7",
    "react-test-renderer": "^16.12.0",
    "redux": "^4.0.0",
    "rimraf": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "prettier --write"
  },
  "marlint": {
    "ignores": [
      "**/.idea/**",
      "**/.next/**",
      "**/examples/**",
      "**/lib/**"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/examples/",
      "/lib/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*).(spec|test).js?(x)"
    ]
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
